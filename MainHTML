<p>Click the button to generate a fact.</p>
<br>
<button id="UserButton" class="factgeneratingbutton">Generate Fact</button>
<p id="FACTRESULT"></p>
</div>
<script>
const Result=document.getElementById('FACTRESULT')
const BUTTONUSER=document.getElementById('UserButton')
const FactsAPI='https://uselessfacts.jsph.pl/random.json?language=en'

function GenerateFact() {
Result.textContent='Generating an interesting fact....';
fetch(FactsAPI)
.then(response=> {
if(!response.ok) {
throw new Error('Fact could not be generated! Pls retry with a stable connection!');
}
return response.json();
})
.then(data=>{
console.log(data)
Result.textContent=data.text;
})
.catch(error=> {
console.error('Error', error)
Result.textContent='Error! Pls try again!'
});
}
BUTTONUSER.addEventListener('click', GenerateFact)
</script>
